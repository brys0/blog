{
  "baseURL": "https://blog.vlang.foundation/",
  "languageCode": "en-us",
  "title": "Blog | V Foundation",
  "ignoreFiles": [".scss$", ".ts$"],
  "minify": {
    "minifyOutput": true
  },
  "permalinks": {
    "blog": "/:filename:"
  },
  "taxonomies": {
    "tag": "categories"
  },
  "params": {
    "visibleTitle": "Blog"
  },
  "markup": {
    "highlight": {
      "style": "friendly",
      "tabWidth": 4
    },
    "renderer": {
      "hardWraps": true
    },
    "goldmark": {
      "parser": {
        "attribute": {
          "block": true,
          "title": true
        }
      }
    }
  }
}
